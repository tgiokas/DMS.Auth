{
  "ConnectionStrings": {
    "DefaultConnection": "Host=auth-db;Database=authdb;Username=authuser;Password=authpass;Include Error Detail=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Debug"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Async",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "Logs/log.txt",
                "rollingInterval": "Day"
              }
            },
            {
              "Name": "File",
              "Args": {
                "path": "Logs/log.clef",
                "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
                "rollingInterval": "Day"
              }
            }
          ]
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341",
          "apiKey": "none"
        }
      }
    ]
  },

  "Keycloak": {
    "Realm": "NBARealm",
    "BaseUrl": "https://keycloak:8443",
    "Authority": "https://keycloak:8443/realms/NBARealm",
    "ClientId": "auth-app",
    "ClientSecret": "rpC8odnaEbiwKKxVwcg8yle2bobgFUA2",
    "RequireHttpsMetadata": false, // Only for local dev    
    "RedirectURI": "http://localhost:5032/authentication/oauth2callback"
  },
  "MfaType": "none",

  "Kafka": {
    "BootstrapServers": "kafka1:19092,kafka2:19092",
    "Topic": "email",
    "ReconnectBackoffMs": 50, // Quick reconnect to alternative broker
    "ReconnectBackoffMaxMs": 5000, // Max reconnect backoff

    // Producer settings
    "Acks": "Leader",
    "SocketConnectionSetupTimeoutMs": 10000, // Time for initial connection
    "SocketTimeoutMs": 5000, // Failure detection
    "MessageSendMaxRetries": 5, // Retry attempts
    "RetryBackoffMs": 100, // Delay between retries
    "RequestTimeoutMs": 5000,
    "MessageTimeoutMs": 15000
  },

  "AllowedHosts": "*"
}
